<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/statsBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="25dp"
        android:layout_margin="16dp"
        android:text="Back"
        android:background="@color/btnColor"
        />

    <TextView
        android:id="@+id/statsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="64dp"
        android:textSize="36sp"
        app:layout_constraintVertical_bias=".13"/>

    <TextView
        android:id="@+id/clickMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on a stat to view more!"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="24sp"
        app:layout_constraintVertical_bias=".2"/>

    <androidx.appcompat.widget.AppCompatButton
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/completedQuestions"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias=".3"
        android:layout_margin="16dp"
        android:text="Completed: \n \n 0"
        android:textSize="20dp"
        android:background="@color/btnColor"
        />
    <androidx.appcompat.widget.AppCompatButton
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/attemptedQuestions"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/completedQuestions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        android:text="Attempted: \n \n 0"
        android:textSize="20dp"
        android:background="@color/btnColor"
        />
    <androidx.appcompat.widget.AppCompatButton
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/unattemptedQuestions"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/attemptedQuestions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        android:text="Unattempted: \n \n 21"
        android:textSize="20dp"
        android:background="@color/btnColor"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias=".85"
        android:paddingHorizontal="25dp"
        android:text="RESET STATS"
        android:background="@color/btnColor"
        />

</androidx.constraintlayout.widget.ConstraintLayout>